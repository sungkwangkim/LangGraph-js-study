{
    "$schema": "https://json.schemastore.org/tsconfig",
    "compilerOptions": {
        "baseUrl": "./src",
        "target": "esnext",
        "lib": ["dom", "dom.iterable", "esnext"],
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "jsx": "react-jsx",
        "allowImportingTsExtensions": true,
        "noEmit": true,
        "incremental": true
    },
    "exclude": ["**/node_modules", "**/.*/*", "dist"],
    "include": [
        "**/*.ts",
        "**/*.tsx",
        "**/*.mts",
        "**/*.cjs",
        "**/*.mjs"
    ]
}